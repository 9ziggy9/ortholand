#include <iostream>
#include <raylib.h>
#include "color.hpp"

int main(void) {
  SetConfigFlags(FLAG_MSAA_4X_HINT);
  InitWindow(960, 720, "ortholand");

  Vector3 cb_pos   = Vector3{0.0f, 0.0f, 0.0f};
  Vector3 cb_scale = Vector3{2.0f, 2.0f, 2.0f};
  Color   cb_color = color::green2;

  Camera3D cam;
  cam.position   = Vector3{10.0f, 10.0f, 10.0f};
  cam.target     = cb_pos;
  cam.up         = Vector3{0.0f, 1.0f, 0.0f};
  cam.fovy       = 45.0f;
  cam.projection = CAMERA_ORTHOGRAPHIC;


  while (!WindowShouldClose()) {
    ClearBackground(color::darkgray);
    BeginDrawing();
    BeginMode3D(cam);
      DrawCubeV(cb_pos, cb_scale, cb_color);
      DrawCubeWiresV(cb_pos, cb_scale, color::white);
    EndMode3D();
    EndDrawing();
  }

  CloseWindow();
  return EXIT_SUCCESS;
}
